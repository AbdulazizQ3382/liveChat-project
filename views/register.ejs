  <div class="container formCon">
    <!-- Default form register -->
    <form class="text-center border border-light p-5" action="/" method="POST">

      <p class="h4 mb-4">Sign up</p>

      <div class="form-row mb-4">
          <div class="col">
              <!-- First name -->
              <input type="text" name="firstName" id="defaultRegisterFormFirstName" class="form-control" placeholder="First name" required>
          </div>
          <div class="col">
              <!-- Last name -->
              <input type="text" name="lastName" id="defaultRegisterFormLastName" class="form-control" placeholder="Last name" required>
          </div>
      </div>

      <!-- username -->
      <input type="email" name="username" id="defaultRegisterFormUsername" class="form-control mb-4" placeholder="E-mail" required>
     

      <!-- Password -->
      <input type="password" name="password" id="defaultRegisterFormPassword" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">
      <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
          At least 8 characters and 1 digit
      </small>
      <!-- Sign up button -->
      <button class="btn btn-info my-4 btn-block" type="submit">Sign up</button>

      <hr>

      <!-- Terms of service -->
      <p>Have an account ?<a href="/login" target="_blank">
          Sign in here please
          </a>
      </p>

    </form>

    <% if( displayMessage === 'error'){ %>
        <div class="alert alert-danger" role="alert">
            <%=displayMessage%> email <a href="#" class="alert-link">used by another user</a>. please type another email
        </div>
    <% } %>
    
<!-- Default form register -->
